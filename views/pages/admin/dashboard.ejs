<!DOCTYPE html>
<html lang="en">

<!-- HEADER -->
<%- include('./partials/header') %>

    <body class="flex">
        <!-- SIDEBAR -->
        <%- include('./partials/sidebar') %>
            <div class="flex-1 p-6">
                <!-- NAVBAR -->
                <%- include('./partials/navbar',{currentPage:title}) %>
                    <!-- main content -->
                    <div class="relative text-gray-500 focus-within:text-gray-900 mb-4">
                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                                <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
                                    <div class="flex justify-between mb-6">
                                        <div>
                                            <div class="flex items-center mb-1">
                                                <div class="text-2xl font-semibold">
                                                    <%= usersCount %>
                                                </div>
                                            </div>
                                            <div class="text-sm font-medium text-gray-400">Users</div>
                                        </div>
                                        <div class="dropdown">
                                            <button type="button"
                                                class="dropdown-toggle text-gray-400 hover:text-gray-600"><i
                                                    class="ri-more-fill"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <a href="/admin/user-management"
                                        class="text-[#f84525] font-medium text-sm hover:text-red-800">View</a>
                                </div>
                                <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
                                    <div class="flex justify-between mb-6">
                                        <div>
                                            <div class="flex items-center mb-1">
                                                <div class="text-2xl font-semibold">
                                                    <%= blogPostsCount %>
                                                </div>
                                            </div>
                                            <div class="text-sm font-medium text-gray-400">Blogs</div>
                                        </div>
                                        <div class="dropdown">
                                            <button type="button"
                                                class="dropdown-toggle text-gray-400 hover:text-gray-600"><i
                                                    class="ri-more-fill"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <a href="/admin/blogs"
                                        class="text-[#f84525] font-medium text-sm hover:text-red-800">View</a>
                                </div>
                                <div class="bg-white rounded-md border border-gray-100 p-6 shadow-md shadow-black/5">
                                    <div class="flex justify-between mb-4">
                                        <div>
                                            <div class="flex items-center mb-1">
                                                <div class="text-2xl font-semibold">
                                                    <%= blogCategoriesCount %>
                                                </div>
                                            </div>
                                            <div class="text-sm font-medium text-gray-400">Blog Categories</div>
                                        </div>
                                        <div class="dropdown">
                                            <button type="button"
                                                class="dropdown-toggle text-gray-400 hover:text-gray-600"><i
                                                    class="ri-more-fill"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <a href="/admin/blog-categories"
                                        class="text-[#f84525] font-medium text-sm hover:text-red-800">View</a>
                                </div>


                            </div>
                        </div>

                    </div>
    </body>

</html>